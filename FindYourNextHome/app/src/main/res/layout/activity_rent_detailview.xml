<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rent_detailview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comsiteprojectcyborn.google.sites.findyournexthome.activities.RentDetailView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2196F3"
            android:textAlignment="textEnd"
            android:textDirection="rtl"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <TextView
            android:id="@+id/lbl_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banner"
            android:textAlignment="center"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/imgHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_banner"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_one"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/testimg" />

            <ImageView
                android:id="@+id/img_two"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/testimg" />

            <ImageView
                android:id="@+id/img_three"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/testimg" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_totalBedRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bed Rooms: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_baths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baths &amp; Toilets: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_balcony"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balcony: "
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_livingRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LivingRoom:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_lifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lift Availability: "
            android:textSize="20sp" />



        <TextView
            android:id="@+id/txt_floorType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Floor Type: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_directionFacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direction Facing: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_parking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parking: "
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent: "
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/layout_ratings_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:text="Ratings: " />

            <RatingBar
                android:id="@+id/rents_ratings"
                style="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/txt_ratings"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:stepSize="0.01" />

            <Spinner
                android:id="@+id/spinner_rating"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_sendMessage"
                android:layout_below="@+id/txt_ratings"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Message"/>

            <Button
                android:id="@+id/btn_contactOwner"
                android:layout_below="@+id/txt_ratings"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Owner"/>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>

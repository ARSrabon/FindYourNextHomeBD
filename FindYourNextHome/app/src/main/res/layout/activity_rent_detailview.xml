<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rent_detailview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comsiteprojectcyborn.google.sites.findyournexthome.activities.RentDetailView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#2196F3"
            android:textAlignment="textEnd"
            android:textDirection="rtl"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <ImageButton
                android:id="@+id/btn_addtowishlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#2196F3"
                android:paddingRight="15dp"
                android:src="@drawable/ic_action_wishlist" />
        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/lbl_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flat For Rent"
            android:textAlignment="center"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/imgHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbl_banner"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_one"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ft_1" />

            <ImageView
                android:id="@+id/img_two"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ft_2" />

            <ImageView
                android:id="@+id/img_three"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/ft_3" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_totalBedRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bed Rooms: 3"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_baths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bathrooms: 2 "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_balcony"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Balcony: 2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_lifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lift Availability: Yes"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_floorType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Floor Type: 6th Floor , Fully Tiles Floor"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_directionFacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Direction Facing: South-West"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_parking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parking Available: Yes"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/txt_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent: 36500 BDT/Month"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/layout_ratings_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_ratings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Ratings: "
                android:textSize="20sp" />

            <RatingBar
                android:id="@+id/rents_ratings"
                style="@style/RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/txt_ratings"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.01" />

            <Spinner
                android:id="@+id/spinner_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_ratings">

                <Button
                    android:id="@+id/btn_sendMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:text="Send Message"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_viewinmap"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="View Map"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_contactOwner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Make Call"
                    android:layout_weight="1" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>
